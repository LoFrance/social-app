{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "outDir": "./build",
    "rootDirs": ["src"],
    "moduleResolution": "Node",
    "pretty": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "exclude": ["node_modules", "**/__tests__/**"]
}
